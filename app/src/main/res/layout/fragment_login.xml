<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ED8383"
    tools:context=".ui.update.LoginFragment"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ngoi_nha"
        android:paddingLeft="30dp"
        tools:ignore="MissingConstraints">
    </ImageView>

    <TextView
        android:paddingLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="Log-in to   update"
        android:textColor="@color/black"
        android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="'This part is for administrators \n to log in to update new captions for the app'"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:textStyle="italic"
            android:layout_marginBottom="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            >

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:text="Username"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/et_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:scaleType="fitXY"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:text="Password"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:scaleType="fitXY"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Log-in"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"/>
</LinearLayout>
